{
  "name": "graasp-app-code-review",
  "version": "0.1.0",
  "private": true,
  "author": "EPFL",
  "contributors": [
    "Juan Carlos Farah",
    "Basile Spaenlehauer"
  ],
  "homepage": ".",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-solid-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.16",
    "@material-ui/core": "4.12.3",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "4.0.0-alpha.60",
    "@monaco-editor/react": "4.2.2",
    "date-fns": "2.25.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "i18next": "20.6.1",
    "lodash": "4.17.21",
    "prismjs": "1.25.0",
    "prop-types": "15.7.2",
    "qs": "6.10.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-ga": "3.3.0",
    "react-i18next": "11.12.0",
    "react-mde": "11.5.0",
    "react-redux": "7.2.5",
    "react-scripts": "4.0.3",
    "react-select": "4.3.1",
    "react-toastify": "8.0.2",
    "redux": "4.1.1",
    "redux-devtools-extension": "2.13.9",
    "redux-promise": "0.6.0",
    "redux-thunk": "2.3.0",
    "showdown": "1.9.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:local start:api",
    "start:local": "env-cmd -f ./.env.local react-app-rewired start",
    "start:api": "json-server --watch data/db.json --port 3636 --id _id --routes data/routes.json",
    "prestart:api": "cat data/default.json > data/db.json",
    "build": "run-s build:react",
    "build:react": "react-app-rewired build",
    "build:local": "env-cmd -f ./.env.local yarn build",
    "build:dev": "env-cmd -f ./.env.dev yarn build",
    "build:prod": "env-cmd -f ./.env.prod yarn build",
    "build:version": "REACT_APP_VERSION=$CI_BRANCH env-cmd --no-override -f ./.env.prod yarn build",
    "lint": "eslint .",
    "prettier": "prettier --check 'src/**/*.js'",
    "test": "react-scripts test",
    "test:once": "cross-env CI=true env-cmd -f ./.env.test react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:ci": "run-s test:coverage report",
    "report": "cat ./coverage/lcov.info | codacy-coverage",
    "eject": "react-scripts eject",
    "release": "git fetch --tags && git add CHANGELOG.md && standard-version -a",
    "release:first": "git fetch --tags && git add CHANGELOG.md && standard-version -a --first-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "babel-plugin-prismjs": "2.1.0",
    "codacy-coverage": "3.4.0",
    "cross-env": "7.0.3",
    "customize-cra": "1.0.0",
    "env-cmd": "10.1.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.25.1",
    "glob": "7.1.7",
    "husky": "^7.0.0",
    "json-server": "0.16.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.0",
    "pretty-quick": "3.1.1",
    "react-app-rewired": "2.1.8",
    "standard-version": "9.3.1"
  },
  "release": {
    "analyzeCommits": "conventional"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
